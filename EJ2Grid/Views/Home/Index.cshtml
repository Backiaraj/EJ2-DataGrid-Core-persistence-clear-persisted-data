
<button id="refresh" onclick="OnClick()">Refresh page</button>
<ejs-grid dataSource="@ViewBag.DataSource" id="Grid" allowPaging="true" enablePersistence="true">
    <e-grid-columns>
        <e-grid-column field="OrderID" width="150" headerText="Order ID"> </e-grid-column>
        <e-grid-column field="EmployeeID" headerText="Employee ID" width="150"></e-grid-column>
        <e-grid-column field="Freight" headerText="Freight" width="150" format="C2"></e-grid-column>
        <e-grid-column field="OrderDate" headerText="Order Date" width="150" format="yMd"></e-grid-column>
        <e-grid-column field="ShipCountry" headerText="Ship Country" width="150"></e-grid-column>
    </e-grid-columns>
</ejs-grid>

<script>
    function OnClick() {
        var gridObj = document.getElementById("Grid").ej2_instances[0];
        gridObj.enablePersistence = false;
        window.localStorage.setItem("gridGrid", "");
        gridObj.destroy();
        location.reload();
    }
</script>
